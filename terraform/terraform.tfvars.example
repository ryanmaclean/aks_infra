# Example terraform.tfvars for AKS Infrastructure
# Copy to terraform.tfvars and customize for your environment

# Core Settings
cluster_name        = "myapp-aks-dev"
resource_group_name = "myapp-aks-rg"
location            = "eastus"
environment         = "dev"
owner               = "platform-team"

# Kubernetes
kubernetes_version = "1.32"
dns_prefix         = "myapp-dev"
aks_sku_tier       = "Standard"  # Free, Standard, or Premium

# Node Pool Sizing
default_node_pool_vm_size   = "Standard_D4s_v5"
default_node_pool_min_count = 2
default_node_pool_max_count = 5

# Windows Node Pool (optional)
enable_windows_node_pool    = false
windows_node_pool_vm_size   = "Standard_D4s_v5"
windows_node_pool_max_count = 3

# Workload Identity
workload_namespace       = "default"
workload_service_account = "workload-identity-sa"
